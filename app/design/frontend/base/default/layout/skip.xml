<layout version="0.1.0">
    <default>
        <reference name="head">
            <action method="addItem">
                <type>skin_js</type>
                <name>skip/jquery-ui.min.js</name>
            </action>
            <action method="addItem">
                <type>skin_js</type>
                <name>skip/jquery.datepick/jquery.plugin.js</name>
            </action>
            <action method="addItem">
                <type>skin_js</type>
                <name>skip/jquery.datepick/jquery.datepick.js</name>
            </action>
            <action method="addItem">
                <type>skin_css</type>
                <name>skip/jquery.datepick/jquery.datepick.css</name>
            </action>
        </reference>
    </default>
    <catalog_product_view>
        <reference name="product.info.options">
            <action method="addOptionRenderer"><type>date</type><block>catalog/product_view_options_type_date</block><template>skip/catalog/product/view/options/type/date.phtml</template></action>
        </reference>
    </catalog_product_view>
</layout>
