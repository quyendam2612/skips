<?xml version="1.0"?>
<config>
    <modules>
        <Queen_Skip>
            <version>0.4.0</version>
        </Queen_Skip>
    </modules>
    <global>
        <models>
            <queen_skip>
                <class>Queen_Skip_Model</class>
                <resourceModel>queen_skip_mysql4</resourceModel>
            </queen_skip>
            <queen_skip_mysql4>
                <class>Queen_Skip_Model_Mysql4</class>
                <entities>
                    <permit>
                        <table>queen_skip_permit</table>
                    </permit>
                    <postcode>
                        <table>queen_skip_postcode</table>
                    </postcode>
                    <town>
                        <table>queen_skip_town</table>
                    </town>
                </entities>
            </queen_skip_mysql4>
        </models>
        <blocks>
            <queen_skip>
                <class>Queen_Skip_Block</class>
            </queen_skip>
            <sales>
                <rewrite>
                    <order_info_buttons>Queen_Skip_Block_Order_Info_Buttons</order_info_buttons>
                </rewrite>
            </sales>
        </blocks>
        <helpers>
            <queen_skip>
                <class>Queen_Skip_Helper</class>
            </queen_skip>
        </helpers>
        <resources>
            <queen_skip_setup>
                <setup>
                    <module>Queen_Skip</module>
                </setup>
            </queen_skip_setup>
        </resources>
    </global>
    <frontend>
        <routers>
            <skip>
                <use>standard</use>
                <args>
                    <module>Queen_Skip</module>
                    <frontName>skip</frontName>
                </args>
            </skip>
        </routers>
        <layout>
            <updates>
                <skip>
                    <file>skip.xml</file>
                </skip>
            </updates>
        </layout>
    </frontend>
    <admin>
        <routers>
            <skip>
                <use>admin</use>
                <args>
                    <module>Queen_Skip</module>
                    <frontName>skip</frontName>
                </args>
            </skip>
        </routers>
    </admin>
    <adminhtml>
        <menu>
            <catalog>
                <children>
                    <skip_permit>
                        <title>SKIP - Manage Permit Type</title>
                        <sort_order>901</sort_order>
                        <action>skip/adminhtml_permit</action>
                    </skip_permit>
                    <skip_postcode>
                        <title>SKIP - Manage Postcode</title>
                        <sort_order>902</sort_order>
                        <action>skip/adminhtml_postcode</action>
                    </skip_postcode>
                    <skip_town>
                        <title>SKIP - Manage Town</title>
                        <sort_order>903</sort_order>
                        <action>skip/adminhtml_town</action>
                    </skip_town>
                </children>
            </catalog>
        </menu>
        <acl>
            <resources>
                <all>
                    <title>Allow Everything</title>
                </all>
                <admin>
                    <children>
                        <catalog>
                            <children>
                                <skip_permit>
                                    <title>SKIP - Manage Permit Type</title>
                                </skip_permit>
                                <skip_postcode>
                                    <title>SKIP - Manage Postcode</title>
                                </skip_postcode>
                                <skip_town>
                                    <title>SKIP - Manage Town</title>
                                </skip_town>
                            </children>
                        </catalog>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <queen_skip>
                                            <title>SKIP - All</title>
                                        </queen_skip>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
        <layout>
            <updates>
                <skip>
                    <file>skip.xml</file>
                </skip>
            </updates>
        </layout>
    </adminhtml>
    <stores>
        <admin>
            <design>
                <package>
                    <name>default</name>
                </package>
                <theme>
                    <default>skip</default>
                </theme>
            </design>
        </admin>
    </stores>
</config>